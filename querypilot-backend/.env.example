# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Core Database (for storing user accounts)
MONGODB_CORE_URI=mongodb://localhost:27017/querypilot_core

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Encryption Key for MongoDB URI storage (must be 32 characters)
ENCRYPTION_KEY=12345678901234567890123456789012

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Hugging Face API
HUGGINGFACE_API_TOKEN=your-huggingface-api-token-here
